        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
updateBudget();
	
function updateBudget(){
gr = new GlideRecord("x_isgi_roster_allocation");
gr.addQuery('month_value',current.month);
gr.addQuery('slc',current.slc);	
gr.query();
while(gr.next()){
var Budget = gr.total_budget_seats;
var Actuals = gr.total_actual_seats;		
}
current.base_allotted=Budget;
current.actual_booked=Actuals;	
}

var difference = (current.base_allotted-current.actual_booked);
if(difference<=0 || difference==""){
current.difference=0;	
gs.addErrorMessage('All the seats are booked, please contact your respective SLC');	
}	
else{
current.difference=difference;	
}	
	

})(current, previous);]]></script>
